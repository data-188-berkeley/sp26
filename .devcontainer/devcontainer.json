{
  "name": "Jekyll",
  // Tip: pin docker image version to avoid dependency issues
  "image": "mcr.microsoft.com/devcontainers/jekyll:2.2.1-3.3-bookworm",  // Ruby 3.3.9

  "features": {},

  "forwardPorts": [
    4000,
    35729
  ],

  "postCreateCommand": "sh .devcontainer/post-create.sh",

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "index.md"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-ruby.ruby",
        "kargware.vscode-extension-jekyll-kw",
        "rebornix.ruby",
        "deque-systems.vscode-axe-linter"
      ]
    }
  }
}
